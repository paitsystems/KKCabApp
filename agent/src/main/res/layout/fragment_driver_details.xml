<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Red"
    android:padding="10dp"
    tools:context=".OTPVerificationActivity">

    <LinearLayout
        android:id="@+id/lay_driverName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/white_border_draw"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_driverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="Driver Name"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_mobNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_driverName"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_border_draw"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_vehNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="Driver Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_mobNo"
        android:orientation="horizontal">

        <TextView
            style="@style/textViewMob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PAN CARD"
            android:textColor="@color/white" />

        <TextView
            style="@style/textViewMob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="LICENSE"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_img1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_tv"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_pan"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/mobmargin2"
            android:layout_weight="0.5"
            android:background="@drawable/white_border_draw"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_pan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_local_see_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_license"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/mobmargin2"
            android:layout_weight="0.5"
            android:background="@drawable/white_border_draw"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_local_see_black_24dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_img1"
        android:orientation="horizontal">

        <TextView
            style="@style/textViewMob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PROFILE PIC"
            android:textColor="@color/white" />

        <TextView
            style="@style/textViewMob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="LICENSE"
            android:textColor="@color/white"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_img2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_tv1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_pic"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/mobmargin2"
            android:layout_weight="0.5"
            android:background="@drawable/white_border_draw"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_local_see_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_vehImg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/mobmargin2"
            android:layout_weight="0.5"
            android:background="@drawable/white_border_draw"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/img_vehImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_local_see_black_24dp" />

        </LinearLayout>
    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/white_btn_draw"
        android:text="SAVE"
        android:textColor="@color/Red" />
</RelativeLayout>