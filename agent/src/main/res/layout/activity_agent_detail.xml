<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Red"
    android:padding="10dp"
    tools:context=".OTPVerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_pic"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mobmargin5"
        android:background="@drawable/profile_img_circle_draw"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_male" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:srcCompat="@drawable/ic_male" />

    <LinearLayout
        android:id="@+id/lay_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/lay_pic"
        android:layout_centerInParent="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/white_border_draw"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="City"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_agentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_city"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_border_draw"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_agentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="Agent Name"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_agencyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_agentName"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_border_draw"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_agencyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="Agency Name"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_agencyName"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_border_draw"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="EmailId"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_mobNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_email"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_border_draw"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_mobNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="Mobile No"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_mobNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/white_btn_draw"
        android:text="REQUEST"
        android:textColor="@color/Red" />
</RelativeLayout>